<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/widget_margin"
    card_view:cardCornerRadius="@dimen/widget_margin"
    card_view:cardElevation="@dimen/widget_margin">


    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_card"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/item_card_tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_card"
            android:gravity="start"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingStart="@dimen/margin_20dp"
            android:paddingTop="@dimen/margin_20dp"
            android:text="@string/labelExerciseName"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_22sp" />

        <TextView
            android:id="@+id/item_card_tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_card_tv_card_name"
            android:gravity="start"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingEnd="@dimen/margin_10dp"
            android:paddingStart="@dimen/margin_20dp"
            android:text="@string/labelDuration"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_18sp" />

        <TextView
            android:id="@+id/item_card_tv_burned_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_card_tv_duration"
            android:gravity="start"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingEnd="@dimen/margin_10dp"
            android:paddingStart="@dimen/margin_20dp"
            android:text="@string/burned_calories"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_18sp"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>